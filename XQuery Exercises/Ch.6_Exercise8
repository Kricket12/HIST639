xquery version "3.1";
declare namespace tei = "http://www.tei-c.org/ns/1.0";
declare function local:transform-persName($surname as xs:string, $forename as xs:string) 
as element (tei:persName)
{
<persName xmlns="http://www.tei-c.org/ns/1.0">
    <forename>{ $forename }</forename>
    <surname>fn:uppercase ( {$surname} )</surname>
</persName>
};
let $forename := "Shinpei"
let $surname := "Goto"
local:transform-persName("Shinpei", "Goto")